<h1>ログイン</h1>
<%= link_to '新規登録', new_user_path %>
<%= form_with scope: :session, local: true do |form| %>
    <div class="field">
        <%= form.label :email %><br>
        <%= form.text_field :email %><br>
    </div>

    <div class="form-field">
        <%= form.label :password %><br>
        <%= form.password_field :password %><br>
    </div>

    <div class="actions">
        <%= form.submit('登録') %>
    </div>
<% end %>
